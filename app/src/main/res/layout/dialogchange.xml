<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvChangeAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Буде використано зэднання з мережею інтернет!Ви дійсно хочете мазати?:)" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >



        <ImageView
            android:id="@+id/ChangeYes"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/egree" />

        <ImageView
            android:id="@+id/ChangeNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:src="@drawable/deesagree" />

    </LinearLayout>

</LinearLayout>